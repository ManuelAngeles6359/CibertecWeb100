<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cibertec.Angular</title>
    <environment names="Development, Production">
        <link href="~/libraries/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body ng-controller="applicationController as vm"
      ng-init="init('@ViewBag.WebApiUrl')">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a ui-sref="home" ui-sref-active="active" class="navbar-brand">Cibertec.Angular</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a ng-if="!vm.validate()" ui-sref="login" ui-sref-active="active">Login</a></li>
                    <li><a ng-if="vm.validate()" ng-click="vm.logout()" href="#" ui-sref-active="active">Logout</a></li>
                    <li><a ng-if="vm.validate()" ui-sref="product" ui-sref-active="active">Product</a></li>
                    <li><a ng-if="vm.validate()" ui-sref="customer" ui-sref-active="active">Customer</a></li>
                    <li><a ng-if="vm.validate()" ui-sref="supplier" ui-sref-active="active">Supplier</a></li>
                    <li><a ng-if="vm.validate()" ui-sref="order" ui-sref-active="active">Order</a></li>
                    <li><a ng-if="vm.validate()" ui-sref="orderItem" ui-sref-active="active">OrderItem</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - Cibertec.Angular</p>
        </footer>
    </div>

    <environment names="Development, Production">
        <script src="~/libraries/jquery/jquery.js"></script>
        <script src="~/libraries/bootstrap/js/bootstrap.js"></script>

        <script src="~/libraries/angular/angular.js"></script>
        <script src="~/libraries/angular/angular-ui-router.js"></script>
        <script src="~/libraries/angular/angular-local-storage.js"></script>
        <script src="~/libraries/angular/ui-bootstrap-tpls.js"></script>

        <script src="~/app/app.js"></script>
        <script src="~/app/app.config.js"></script>
        <script src="~/app/app.controller.js"></script>
        <script src="~/app/app.routes.js"></script>
        <script src="~/app/app.interceptor.js"></script>

        <script src="~/app/shared/data.service.js"></script>
        <script src="~/app/shared/settings.service.js"></script>
        <script src="~/app/shared/authentication.service.js"></script>



        <script src="~/app/public/login/login.controller.js"></script>

        <script src="~/app/components/modal/modal.directive.js"></script>


        <script src="~/app/private/product/directives/product-card/product.card.js"></script>
        <script src="~/app/private/product/directives/product-form/product.form.js"></script>
        <script src="~/app/private/product/product.controller.js"></script>

        <script src="~/app/private/customer/directives/customer-card/customer.card.js"></script>
        <script src="~/app/private/customer/directives/customer-form/customer.form.js"></script>
        <script src="~/app/private/customer/customer.controller.js"></script>


        <script src="~/app/private/order/directives/order-card/order.card.js"></script>
        <script src="~/app/private/order/directives/order-form/order.form.js"></script>
        <script src="~/app/private/order/order.controller.js"></script>

        <script src="~/app/private/supplier/directives/supplier-card/supplier.card.js"></script>
        <script src="~/app/private/supplier/directives/supplier-form/supplier.form.js"></script>
        <script src="~/app/private/supplier/supplier.controller.js"></script>

        <script src="~/app/private/orderItem/directives/orderItem-card/orderItem.card.js"></script>
        <script src="~/app/private/orderItem/directives/orderItem-form/orderItem.form.js"></script>
        <script src="~/app/private/orderItem/orderItem.controller.js"></script>



    </environment>

    @*<environment names="Development, Production">
            <script src="~/js/bootstrap.js"></script>
            <script src="~/js/angular.js"></script>
            <script src="~/js/app-site.js"></script>
            <script src="~/js/app-cibertec.js"></script>
        </environment>*@
</body>
</html>
